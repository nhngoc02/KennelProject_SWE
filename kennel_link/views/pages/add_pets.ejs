<%- include('../partials/emp-client-head', {title: 'Add Pets', type: type}) %>

<body>
    <div class="container">
        <h3> <%- message %> </h3>
        <h2>Add Pet</h2>
        <% if(type == 'Client') { %>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="petName">Pet Name:</label>
                    <input type="text" id="petName" name="petName" required>
                </div>
                <div class="form-group">
                    <label for="petType">Pet Type:</label>
                    <input type="text" id="petType" name="petType" required>
                </div>
                <div class="form-group">
                    <label for="petBreed">Pet Breed:</label>
                    <input type="text" id="petBreed" name="petBreed" required>
                </div>
                <div class="form-group">
                    <label for="petSex">Pet Sex:</label>
                    <select id="petSex" name="petSex" required>
                        <option value="F">Female</option>
                        <option value="M">Male</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="petWeight">Pet Weight:</label>
                    <input type="text" id="petWeight" name="petWeight" required>
                </div>
                <div class="form-group">
                    <label for="petDOB">Pet Date Of Birth:</label>
                    <input type="date" id="petDOB" name="petDOB" required>
                </div>
        <div class="form-group">
            <input type="hidden" id="ownerFN" name="ownerFN" value="<%- ownerFN %>" />
        </div>
        <div class="form-group">
            <input type="hidden" id="ownerLN" name="ownerLN" value="<%- ownerLN %>" />
        </div>


                <button class="button" type="submit">Add Pet</button>
            </form>
        <% } else if(type == 'Employee') { %>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="ownerFN">Client First Name:</label>
                    <input type="text" id="ownerFN" name="ownerFN" required>
                </div>
                <div class="form-group">
                    <label for="ownerLN">Client Last Name:</label>
                    <input type="text" id="ownerLN" name="ownerLN" required>
                </div>
                <div class="form-group">
                    <label for="petName">Pet Name:</label>
                    <input type="text" id="petName" name="petName" required>
                </div>
                <div class="form-group">
                    <label for="petType">Pet Type:</label>
                    <input type="text" id="petType" name="petType" required>
                </div>
                <div class="form-group">
                    <label for="petBreed">Pet Breed:</label>
                    <input type="text" id="petBreed" name="petBreed" required>
                </div>
                <div class="form-group">
                    <label for="petSex">Pet Sex:</label>
                    <select id="petSex" name="petSex" required>
                        <option value="F">Female</option>
                        <option value="M">Male</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="petWeight">Pet Weight:</label>
                    <input type="text" id="petWeight" name="petWeight" required>
                </div>
                <div class="form-group">
                    <label for="petDOB">Pet Date Of Birth:</label>
                    <input type="date" id="petDOB" name="petDOB" required>
                </div>

                <button class="button" type="submit">Add Pet</button>
            </form>
        <% } else { %>
            <h2>Tmp for gen not work</h2>
        <% } %>
    </div>
</body>
</html>
